<span class="position">{{ top }}</span>
<span class="position">{{ left }}</span>
<div class="btn-group btn-group-sm">
    <button class="btn btn-default" ng-mousedown='mouseDown("up")' ng-mouseup='mouseUp()'>
        <i class="fa fa-caret-up"></i>
    </button>
    <button class="btn btn-default" ng-mousedown='mouseDown("down")' ng-mouseup='mouseUp()'>
        <i class="fa fa-caret-down"></i>
    </button>
</div>